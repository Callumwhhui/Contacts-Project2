<%- include('../partials/header') %>

<div class="container mt-3">
    <h2>All Contacts</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>D.O.B</th>
                <th>More</th>
                <th><a class="btn btn-outline-success" href="/contacts/new">+</a></th>
            </tr>
        </thead>
        <tbody>
            <% contacts.forEach(function(c){ %>
                <tr>
                    <td><%= c.name %></td>
                    <td><%= c.email %></td>
                    <td><%= c.phone %></td>
                    <td><%= c.dob ? c.dob.toLocaleDateString() : 'Not specified'%></td>
                    <td><a class="btn btn-outline-primary" href="/contacts/<%= c._id %>">Details</a></td>
                    <td>
                      <form action="/contacts/<%= c.id %>?_method=DELETE" method="POST">
                        <button class="btn btn-outline-danger" type="submit">X</button>
                      </form>
                    </td>
                </tr>
           <% })%>
        </tbody>
    </table>
</div>





